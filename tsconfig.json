{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6"],
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "types": ["reflect-metadata"],
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}